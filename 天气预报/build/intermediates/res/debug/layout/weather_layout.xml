<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:id="@+id/day_weather_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_day_1"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:text="今天"
            android:gravity="center"
            android:textColor="@color/white"/>

        <com.weather.app.customView.SmartImageView
            android:id="@+id/iv_day_img_1"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/weather_no"
            />

        <TextView
            android:id="@+id/tv_day_weather_1"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="晴"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_day_temperature_1"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:text="28 ~ 13℃"
            android:gravity="center"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_day_wind_1"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:text="微风"
            android:gravity="center"
            android:textColor="@color/white"/>

        <com.weather.app.customView.SmartImageView
            android:id="@+id/iv_day_img_n_1"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/weather_no"
            />

        <TextView
            android:id="@+id/tv_week_1"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:text="星期一"
            android:gravity="center"
            android:textColor="@color/white"/>

    </LinearLayout>

